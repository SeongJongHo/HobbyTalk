<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jongho.category.dao.mapper.CategoryMapper">
    <select id="selectAllMainCategory" resultType="com.jongho.category.domain.model.Category">
        SELECT
            id,
            name,
            parent_id
        FROM
            hobby_category
        WHERE
            parent_id IS NULL
    </select>
    <select id="selectSubCategory" resultType="com.jongho.category.domain.model.Category">
        SELECT
            id,
            name,
            parent_id
        FROM
            hobby_category
        WHERE
            parent_id = #{parentId}
</mapper>